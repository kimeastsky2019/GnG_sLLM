# www.gngmeta.com - AI Energy SLLM 앱 (루트(/) 및 /aienergy/ 모두 연결)
# 서버(34.64.248.144)에 적용 방법:
# 1. 이 내용으로 /etc/nginx/sites-available/www.gngmeta.com.conf 생성
# 2. sudo ln -sf /etc/nginx/sites-available/www.gngmeta.com.conf /etc/nginx/sites-enabled/
# 3. sudo nginx -t && sudo systemctl reload nginx
# 4. SSL: sudo certbot --nginx -d www.gngmeta.com

server {
    listen 80;
    server_name www.gngmeta.com;
    root /var/www/html;

    # 루트(/) 접속 시에도 앱 표시: aienergy의 index.html 사용
    location / {
        try_files $uri $uri/ /aienergy/index.html;
    }

    # /aienergy/* 자산 및 SPA 폴백 (앱이 base /aienergy/ 로 빌드됨)
    location /aienergy/ {
        alias /var/www/html/aienergy/;
        try_files $uri $uri/ /aienergy/index.html;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
}

